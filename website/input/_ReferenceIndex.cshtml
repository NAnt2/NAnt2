@{
	Layout = @"/_Master.cshtml";
	ViewData["Title"] = Model.String(Keys.GroupKey) + " Reference";
}

<section class="content-header">
	<h1>@Model.String(Keys.GroupKey)</h1>
</section>
<section class="content">
	<div class="box">
		<div class="box-body no-padding">
			<table class="table table-striped table-hover two-cols-alt table-responsive">
				<thead>
					<tr>
						<th>@Model.String(Keys.GroupKey).TrimEnd(new char[] {'s'})</th>
						<th>Summary</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var refDoc in Model.DocumentList(Keys.GroupDocuments).OrderBy(x => x.String(Keys.Title)))
					{
						<tr>
							<td>
								<strong>@Context.GetTypeLink(refDoc, refDoc.String(Keys.Title), false)</strong>
							</td>
							<td>
								@Html.Raw(refDoc.String(CodeAnalysisKeys.Summary))
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</section>
@RenderBody()
